{
  "name": "zakaz-cli",
  "module": "index.ts",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "author": "Navid Madannezhad",
  "bin": {
    "zakaz": "./src/index.ts"
  },
  "scripts": {
    "build": "bun build ./src/index.ts --outfile=build/index.js && bun run build-types",
    "build-types": "tsc --emitDeclarationOnly --project tsconfig.types.json"
  },
  "type": "module",
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "commander": "^13.1.0"
  },
  "files": [
    "build/*.js",
    "build/*.d.ts"
  ]
}
